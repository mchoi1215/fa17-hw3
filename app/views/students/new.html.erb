<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full Student Name") %>
  <%= text_field_tag(:full_name, nil, placeholder: @placeholder_name) %>

  <%= label_tag(:major_name, "Major Name") %>
  <%= text_field_tag(:major_name, nil, placeholder: @placeholder_major) %>

  <%= label_tag(:grade_level, "Grade Received") %>
  <%= text_field_tag(:grade_level, nil, placeholder: @placeholder_grade) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>